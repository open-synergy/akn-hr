<odoo>
<record id="hr_travel_request_realization_method_view_search" model="ir.ui.view">
    <field name="name">hr.travel_request_realization_method form</field>
    <field name="model">hr.travel_request_realization_method</field>
    <field name="arch" type="xml">
        <search>
        </search>
    </field>
</record>

<record id="hr_travel_request_realization_method_view_tree" model="ir.ui.view">
    <field name="name">hr.travel_request_realization_method tree</field>
    <field name="model">hr.travel_request_realization_method</field>
    <field name="arch" type="xml">
        <tree create="false" delete="false" edit="false">
            <field name="name"/>
            <field name="code"/>
        </tree>
    </field>
</record>

<record id="hr_travel_request_realization_method_view_form" model="ir.ui.view">
    <field name="name">hr.travel_request_realization_method form</field>
    <field name="model">hr.travel_request_realization_method</field>
    <field name="arch" type="xml">
        <form create="false" delete="false" edit="false">
            <header/>
            <sheet>
                <div class="oe_right oe_button_box" style="width: 300px;" name="buttons"/>
                <group name="group_1" colspan="4" col="2">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active"/>
                </group>
                <notebook>
                    <page name="python" string="Python Method">
                        <group name="python_1" colspan="4" col="2">
                            <field name="confirm_method"/>
                            <field name="approve_method"/>
                            <field name="cancel_method"/>
                            <field name="restart_method"/>
                        </group>
                    </page>
                    <page name="note" string="Note">
                        <field name="note"/>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record id="hr_travel_request_realization_method_action" model="ir.actions.act_window">
    <field name="name">Realization Methods</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.travel_request_realization_method</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
    id="hr_travel_request_realization_method_menu"
    name="Realization Methods"
    parent="employee_travel_request_configuration_menu"
    action="hr_travel_request_realization_method_action"
    sequence="2"
    />
</odoo>
