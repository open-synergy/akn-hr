<odoo>
<record id="hr_approve_fixed_expense_view_form" model="ir.ui.view">
    <field name="name">hr.approve_fixed_expense form</field>
    <field name="model">hr.approve_fixed_expense</field>
    <field name="arch" type="xml">
        <form>
            <group name="group_1" colspan="4" col="2">
                <field name="request_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>
            </group>
            <group name="group_2" colspan="4" col="2">
                <field name="line_ids" nolabel="1" colspan="2">
                    <tree editable="top" create="false" delete="false">
                        <field name="line_id" invisible="1" force_save="1"/>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="approve_quantity"/>
                        <field name="price_unit"/>
                        <field name="approve_price_unit"/>
                    </tree>
                </field>
            </group>
            <footer>
                <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                <button special="cancel" string="Cancel"/>
            </footer>
        </form>
    </field>
</record>

<record id="hr_approve_fixed_expense_view_action" model="ir.actions.act_window">
    <field name="name">Change Approved Price Unit</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr.approve_fixed_expense</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="view_id" ref="hr_approve_fixed_expense_view_form"/>
</record>

</odoo>
